{% extends 'base-back.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% if app.user %}
			<h1>Hello
				{{ app.user.name }}
				{{ app.user.prename }}! ✅</h1>
		{% else %}
			<h1>Hello there ! ✅
			</h1>
			<h1>you can login/register by
				<a href="/login">clicking here !</a>
				✅
			</h1>
		{% endif %}


	</div>
{% endblock %}
