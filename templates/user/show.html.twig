{% extends 'base-back.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ user.name }}</td>
			</tr>
			<tr>
				<th>Prename</th>
				<td>{{ user.prename }}</td>
			</tr>
			<tr>
				<th>Birthday</th>
				<td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
			</tr>
			<tr>
				<th>Adress</th>
				<td>{{ user.adress }}</td>
			</tr>
			<tr>
				<th>Country</th>
				<td>{{ user.country }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ user.city }}</td>
			</tr>
			<tr>
				<th>State</th>
				<td>{{ user.state }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ user.phone }}</td>
			</tr>
			<tr>
				<th>Gender</th>
				<td>{{ user.gender }}</td>
			</tr>
			<tr>
				<th>Height</th>
				<td>{{ user.height }}</td>
			</tr>
			<tr>
				<th>Weight</th>
				<td>{{ user.weight }}</td>
			</tr>
			<tr>
				<th>Blood</th>
				<td>{{ user.blood }}</td>
			</tr>
			<tr>
				<th>Speciality</th>
				<td>{{ user.speciality }}</td>
			</tr>
			<tr>
				<th>Hospital</th>
				<td>{{ user.hospital }}</td>
			</tr>
		</tbody>
	</table>


	<a class="btn btn-secondary mb-3" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

	{{ include('user/_delete_form.html.twig') }}
{% endblock %}
